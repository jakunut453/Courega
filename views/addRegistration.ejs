<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MY APP</title>
  <style>
    .box1{
      display: flex;
      flex-direction: row;
      justify-content: center;
    }
    h1{
  font-size: 30px;
  color: #fff;
  text-transform: uppercase;
  font-weight: 300;
  text-align: center;
  margin-bottom: 15px;
}
table{
  width:100%;
  table-layout: fixed;
}
.tbl-header{
  background-color: rgba(255,255,255,0.3);
 }
.tbl-content{
  overflow-x:auto;
  margin-top: 0px;
  border: 1px solid rgba(255,255,255,0.3);
}
th{
  padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;
}
td{
  padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);
}
    @import url(https://fonts.googleapis.com/css?family=Roboto:400,500,300,700);
body{
  margin: 0;
  background: -webkit-linear-gradient(left, #25c481, #25b7c4);
  background: linear-gradient(to right, #25c481, #25b7c4);
  font-family: 'Roboto', sans-serif;
}
section{
  margin: 20px;
}
.header {
  padding: 1px;
  text-align: center;
  background: -webkit-linear-gradient(left, #1c8f5f, #166d75);
  background: linear-gradient(to right, #1c8f5f, #166d75);
  color: white;
  font-size: 20px;
}
button, .submit_button {
  padding      : 5px;
  font         : bold .8em sans-serif;
  border       : 1px solid #25c481;
  background   : rgba(255,255,255,0.3);
  cursor       : pointer;
  margin-top: 5px;
  color:rgb(255, 255, 255);
}
.input_buttons{
  display: block;
  text-align: center;
}
.tAllign{
  color:rgb(255, 255, 255);
  text-align: center;
  padding: 0px;
  margin: 2px;
  margin-top: 10px;
  margin-bottom: 0px;
  border: 2px;
  height: 1em;
}
.submit_buttons{
  text-align: center;
  display: block;
  margin-left:auto;
  margin-right:auto;
}
.det{
  font-size: 2em;
  color:rgb(255, 255, 255);
  padding: 0;
  margin: 0;
  margin-top: 0.5em;
  text-align: center;
}
button{
  display:block;
  margin-left:auto;
  margin-right:auto;
  margin-bottom: 10px;
}
button:after, .submit_button:after {
  content      : " >>>";
}
button:hover,button:focus, .submit_button:hover,.submit_button:focus {
  outline     : none;
  background  : #000;
  color       : #FFF;
}
input {
  font-family: inherit;
  font-size: 100%;
  padding: 0;
  margin: 0;
  width: 22%;
}

  </style>
</head>
<body>
    <div class="header">
      <h2>Courega - Registration Details</h2>
    </div>
    
    <div class="box1">
      <div class="box2">
        <br>
        <p class='tAllign'>Add Student to list</p><br>
    <form action="/addRegistrationStudentEntry" method="POST">
      <div class="input_buttons">
        <input type="text" placeholder="Name" name="Name">
        <input type="text" placeholder="RegNo" name="RegNo">
        <input type="text" placeholder="Branch" name="Branch">
        <input type="text" placeholder="CGPA" name="CGPA">
      </div>
      <div class="submit_buttons">
        <input class="submit_button" type="submit" value="Add">
        <input class="submit_button" type="submit" value="Clear/Delete" formaction="/deleteRegistrationStudentEntry">
      </div>
      </form>
    <br>
    
    <p class='tAllign'>Add Course to list</p><br>
    <form action="/addRegistrationCourseEntry" method="POST">
      <div class="input_buttons">
        <input type="text" placeholder="Name" name="Name">
        <input type="text" placeholder="Code" name="Code">
        <input type="text" placeholder="Branch" name="Branch">
        <input type="text" placeholder="Faculty" name="Faculty">
      </div>
      <div class="submit_buttons">
        <input class="submit_button" type="submit" value="Add">
        <input class="submit_button" type="submit" value="Clear/Delete" formaction="/deleteRegistrationCourseEntry">
      </div>
      </form>
    <br>
    <p class='tAllign'>Selected Students</p><br>
    <section>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Name</th>
              <th>RegNo</th>
              <th>Branch</th>
              <th>CGPA</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
        <% for(var i=0; i<tempList.Students.length; i++) {%>
          <tr class="students">
            <td><%= tempList.Students[i].Name %></td>
            <td><%= tempList.Students[i].RegNo %></td>
            <td><%= tempList.Students[i].Branch %></td>
            <td><%= tempList.Students[i].CGPA %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  </section>
    

    <p class="tAllign">Selected Courses</p><br>
    <section>
      <div class="tbl-header" >
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Name</th>
              <th>Code</th>
              <th>Branch</th>
              <th>Faculty</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>   
            <% for(var i=0; i<tempList.Courses.length; i++) {%>
              <tr class="tempListCourses">
                <td><%= tempList.Courses[i].Name %></td>
                <td><%= tempList.Courses[i].Code %></td>
                <td><%= tempList.Courses[i].Branch %></td>
                <td><%= tempList.Courses[i].Faculty %></td>
              </tr>
            <% } %>
      </tbody>
    </table>
  </div>
  </section><br>

    <form action='/addRegistrationEntry' method='POST' style="text-align: center; margin-top: 0px;">
      <input class="submit_button"  type='submit' value='Add Registrations'>
    </form><br>
  </div>
  <div class="box3">
    <p class='tAllign'>ALL REGISTRATIONS</p><br>
    <p class='tAllign'>Delete Registration</p><br>
      <form action="/deleteRegistrationEntry" method="POST">
        <div class="input_buttons">
          <input type="text" placeholder="Code" name="Code">
          <input type="text" placeholder="RegNo" name="RegNo">
          <input class="submit_button" type="submit" value="Remove">
        </div>
        <div class="submit_buttons">
        </div>
        </form>
    <section>
      <div class="tbl-header" >
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr class="registrations">
              <th>Course Code</th>
              <th>Student RegNo</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content" style="height: 500px;">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>   
            <% for(var i=0; i<registrations.length; i++) {%>
              <tr class="registrations">
                <td><%= registrations[i].Code %></td>
                <td><%= registrations[i].RegNo %></td>
              </tr>
            <% } %>
      </tbody>
    </table>
  </div>
  </section>
    
      
      <br>
    </div>
    </div>
    <button onclick="window.location.href = 'index';" value="Go Back" >Go Back</button>
</body>
</html>